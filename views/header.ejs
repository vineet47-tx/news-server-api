<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="mb-0"><%= name %></h1>
                <p class="mb-0 small text-muted">Your trusted source for news</p>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end">
                    <form class="d-flex" action="/search" method="POST" style="width: 300px;">
                        <input class="form-control form-control-sm me-2" type="search" name="search" placeholder="Search news..." aria-label="Search" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                        <button class="btn btn-outline-light btn-sm" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>